# Google Gemini API (для транскрибации и AI генерации)
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# YouTube API Credentials
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
YOUTUBE_REFRESH_TOKEN=

# DALL-E API Key (опционально, для обложек)
OPENAI_API_KEY=your_openai_api_key_here

# Auphonic API Key (опционально, для профессиональной аудиообработки)
AUPHONIC_API_KEY=your_auphonic_api_key_here

# Настройки Whisper
WHISPER_MODEL=base  # tiny, base, small, medium, large
WHISPER_DEVICE=cpu  # cpu или cuda

# Пути (относительно корня проекта)
OUTPUT_DIR=output
TEMP_DIR=output/temp
